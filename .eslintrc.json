{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "plugin:@tanstack/query/recommended",
    "prettier"
  ],
  "ignorePatterns": ["./src/components/ui/**/*"],
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "react-hooks/exhaustive-deps": "off"
  }
}
