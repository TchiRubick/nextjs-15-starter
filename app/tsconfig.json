{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@packages/auth/*": ["./src/packages/auth/*"],
      "@packages/fetch-action/*": ["./src/packages/fetch-action/*"],
      "@packages/react-query/*": ["./src/packages/react-query/*"],
      "@packages/s3/*": ["./src/packages/s3/*"],
      "@packages/validator/*": ["./src/packages/validator/*"],
      "@packages/db/*": ["./src/packages/db/src/*"],
      "@packages/*": ["./src/packages/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/env.js"
  ],
  "exclude": ["node_modules"]
}
